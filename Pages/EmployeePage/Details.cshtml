@page
@model RazorNorthwinds.Pages.EmployeePage.DetailsModel

@{
    ViewData["Title"] = "Employee Details";
}

<h1>Employee Details - @Model.Employee.EmployeeId</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.TitleOfCourtesy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.TitleOfCourtesy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HireDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Region)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HomePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HomePhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Extension)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Extension)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.ReportsTo)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="./Details" asp-route-id="@Model.Employee.ReportsToNavigation?.EmployeeId">@Model.Employee.ReportsToNavigation?.LastName</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Territories)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Employee.Territories)
            {
                <p>
                    @item.TerritoryId - @item.TerritoryDescription
                </p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
